{{#> layout title="My Project" projectActive=true}}

<div class="container my-5">

  
  <section class="form-section mb-5">
    <h3 class="text-center fw-bold mb-4">ADD MY PROJECT</h3>

    <form id="projectForm">
      
      <div class="mb-3">
        <label class="form-label">Project Name</label>
        <input type="text" id="projectName" class="form-control" required />
      </div>

      
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Start Date</label>
          <input type="date" id="startDate" class="form-control" required />
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">End Date</label>
          <input type="date" id="endDate" class="form-control" required />
        </div>
      </div>

     
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea id="description" class="form-control" rows="3"></textarea>
      </div>

      
      <div class="mb-3">
        <label class="form-label">Technologies</label><br />
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" value="Node Js" id="nodejs" />
          <label class="form-check-label" for="nodejs">Node Js</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" value="React Js" id="reactjs" />
          <label class="form-check-label" for="reactjs">React Js</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" value="Next Js" id="nextjs" />
          <label class="form-check-label" for="nextjs">Next Js</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="checkbox" value="TypeScript" id="typescript" />
          <label class="form-check-label" for="typescript">TypeScript</label>
        </div>
      </div>

      
      <div class="mb-3">
        <label class="form-label">Upload Image</label>
        <input type="file" id="image" class="form-control" />
      </div>

      
      <div class="text-center">
        <button type="submit" class="btn btn-dark rounded-pill px-4">Submit</button>
      </div>
    </form>
  </section>

  
  <section>
    <h3 class="text-center fw-bold mb-4">MY PROJECT</h3>
    <div class="row">
      {{#each projects}}
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.desc}}</p>
              <p><strong>Tech:</strong> {{this.tech}}</p>
              <p><small>{{this.start}} â†’ {{this.end}}</small></p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </section>

</div>


<script src="/js/myproject.js"></script>

{{/layout}}
